{
  "name": "quoridor",
  "version": "1.0.0",
  "description": "Quoridor game implementation",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "rebuild": "npm run build && npm link",
    "pretest": "tsc",
    "test": "mocha dist/test/**/*.test.js",
    "coverage": "c8 mocha 'test/**/*.ts' --require ts-node/register"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^5.2.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.0.0",
    "c8": "^10.1.3",
    "chai": "^4.3.4",
    "mocha": "^11.1.0",
    "ts-mocha": "^11.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "include": [
      "src/**"
    ],
    "exclude": [
      "test/**",
      "node_modules/**"
    ],
    "check-coverage": true,
    "branches": 80,
    "lines": 80,
    "functions": 80,
    "statements": 80
  },
  "dependencies": {
    "chalk": "^4.1.2"
  },
  "bin": {
    "quoridor": "./bin/quoridor"
  }
}
